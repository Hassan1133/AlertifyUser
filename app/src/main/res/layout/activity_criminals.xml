<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activities.CriminalsActivity">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/criminalSearchView"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_margin="15dp"
        android:background="@drawable/fragment_search_view_bg"
        android:elevation="3dp"
        android:theme="@style/search_view_style"
        app:iconifiedByDefault="false"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        app:queryBackground="@color/transparent"
        app:queryHint="@string/search" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/criminals_recycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/criminalSearchView" />

</RelativeLayout>
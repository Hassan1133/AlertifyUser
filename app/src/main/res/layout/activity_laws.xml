<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".activities.LawsActivity">

    <androidx.appcompat.widget.SearchView
        android:id="@+id/lawsSearchView"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_margin="15dp"
        android:background="@drawable/fragment_search_view_bg"
        android:elevation="3dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:theme="@style/search_view_style"
        app:iconifiedByDefault="false"
        app:queryBackground="@color/transparent"
        app:queryHint="@string/search" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/crimesRecycler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lawsSearchView" />

    <ProgressBar
        android:id="@+id/lawsProgressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:indeterminateTint="@color/app_color"
        android:visibility="gone" />

</RelativeLayout>
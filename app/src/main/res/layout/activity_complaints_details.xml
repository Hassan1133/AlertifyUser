<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <TextView
            android:id="@+id/feedback"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="20dp"
            android:layout_marginTop="23dp"
            android:text="Feedback"
            android:textColor="@color/app_color"
            />

        <TextView
            android:id="@+id/crime_evidence_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Evidence"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <RelativeLayout
            android:id="@+id/crime_evidence_layout"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@+id/crime_evidence_heading"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/crime_evidence_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/evidence_icon" />

            <ImageView
                android:id="@+id/crime_evidence_video"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerInParent="true"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/play_video"
                android:visibility="gone" />
        </RelativeLayout>


        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/crime_evidence_underline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/crime_evidence_layout"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/crime_type_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/crime_evidence_underline"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Crime Type"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/details_crime_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/crime_type_heading"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/hint_color"
            android:textSize="15sp" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/crime_type_underline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/details_crime_type"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/crime_details_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/crime_type_underline"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Crime Details"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/details_crime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/crime_details_heading"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/hint_color"
            android:textSize="15sp" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/crime_details_underline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/details_crime"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/crime_Location_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/crime_details_underline"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Crime Location"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/details_crime_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/crime_Location_heading"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/hint_color"
            android:textSize="15sp" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/crime_location_underline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/details_crime_location"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/crime_date_time_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/crime_location_underline"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Crime DateTime"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/details_crime_date_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/crime_date_time_heading"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/hint_color"
            android:textSize="15sp" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/crime_date_time_underline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/details_crime_date_time"
            android:layout_marginTop="20dp" />

        <TextView
            android:id="@+id/complaint_police_station_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/crime_date_time_underline"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Complaint Police Station"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/details_complaint_police_station"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/complaint_police_station_heading"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/hint_color"
            android:textSize="15sp" />

        <com.google.android.material.divider.MaterialDivider
            android:id="@+id/complaint_police_station_underline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/details_complaint_police_station"
            android:layout_marginTop="20dp" />


        <TextView
            android:id="@+id/complaint_date_time_heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/complaint_police_station_underline"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:text="Complaint DateTime"
            android:textColor="@color/black"
            android:textSize="17sp" />

        <TextView
            android:id="@+id/details_complaint_date_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/complaint_date_time_heading"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/hint_color"
            android:textSize="15sp" />

    </RelativeLayout>

</ScrollView>
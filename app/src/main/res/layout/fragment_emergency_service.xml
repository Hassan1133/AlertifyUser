<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.EmergencyRequestFragment">


    <TextView
        android:id="@+id/emergencyHeading"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:text="@string/emergency_help_text"
        android:textAlignment="center"
        android:textColor="@color/hint_color"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/hintHeading"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/emergencyHeading"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:text="@string/emergency_help_text_hint"
        android:textAlignment="center"
        android:textSize="12sp"
        android:textColor="@color/emergency_hint_clr" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/emergencyBtn"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_below="@id/hintHeading"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="@color/emergency_btn_bg_clr"
        android:src="@drawable/emergency_btn"
        app:backgroundTint="@color/emergency_fab_stroke_clr"
        app:borderWidth="10dp"
        app:fabCustomSize="180dp"
        app:maxImageSize="60dp"
        app:tint="@color/white" />

</RelativeLayout>